<%- layout('layouts/boilerplate') %>
  <div class="container" style="margin-bottom: 20px;">
    <h1 class="mb-0 py-2" style="text-align: center; background-color:lightcoral;">FedEx Ship Manager</h1>
    <form action="/ship" method="POST" class="validated-form form-control" style="background-color: antiquewhite"
      novalidate>
      <div class=" row">
        <div class="col-6">
          <h2 class="py-2" style="text-align: center; background-color:plum;">Sender Address</h2>
          <div class="mb-3">
            <% const arr=["Name","Phone","Address","PostalCode","City","State"] %>
              <% for(let i of arr) { %>
                <label for="<%=i%>" class="form-label mt-2">
                  <%=i%>
                </label>
                <input type="text" class="form-control" id="<%=i%>" name="sender[<%=i%>]" required>
                <% } %>
                  <label for="sender[country]" class="form-label mt-2">Country</label>
                  <select class="form-select" id="country" name="sender[Country]" required>
                    <option value="">Choose...</option>
                    <option>India</option>
                    <option>United States</option>
                    <option>China</option>
                    <option>Philippines</option>
                  </select>
                  <label for="email" class="form-label mt-2">Email</label>
                  <input type="email" class="form-control" id="email" name="sender[Email]" placeholder="you@example.com"
                    required>
          </div>
        </div>
        <div class="col-6">
          <h2 class="py-2" style="text-align: center; background-color:plum;">Recipient Address</h2>
          <div class="mb-3">
            <% const arr1=["Name","Phone","Address","PostalCode","City","State"] %>
              <% for(let i of arr1) { %>
                <label for="<%=i%>" class="form-label mt-2">
                  <%=i%>
                </label>
                <input type="text" class="form-control" id="<%=i%>" name="recipient[<%=i%>]" required>
                <% } %>
                  <label for="country" class="form-label mt-2">Country</label>
                  <select class="form-select" id="country" name="recipient[Country]" required>
                    <option value="">Choose...</option>
                    <option>India</option>
                    <option>United States</option>
                    <option>China</option>
                    <option>Philippines</option>
                  </select>
                  <label for="email" class="form-label mt-2">Email</label>
                  <input type="email" class="form-control" id="email" name="recipient[Email]"
                    placeholder="you@example.com" required>
          </div>
        </div>
      </div>

      <hr style="height:2px;border-width:0;color:gray;background-color:gray">

      <div class="row row-cols-1 row-cols-md-3 mb-3 text-center">
        <div class="col">
          <div class="card mb-4 shadow-sm">
            <div class="card-header">
              <h4 class="my-0 fw-normal">Express Delivery</h4>
            </div>
            <div class="card-body">
              <h1 class="card-title pricing-card-title">₹1500</h1>
              <ul class="list-unstyled mt-3 mb-4">
                <li>by 12:00</li>
                <li>FedEx international</li>
                <li>Economy</li>
              </ul>
              <input type="radio" id="option1" name="shipmentType" class="btn-check" value="express">
              <label style="width: 270px;" class="btn btn-primary" for="option1">Select</label>
            </div>
          </div>
        </div>
        <div class="col">
          <div class="card mb-4 shadow-sm">
            <div class="card-header">
              <h4 class="my-0 fw-normal">Fast</h4>
            </div>
            <div class="card-body">
              <h1 class="card-title pricing-card-title">₹900</h1>
              <ul class="list-unstyled mt-3 mb-4">
                <li>by 12:00</li>
                <li>FedEx international</li>
                <li>Economy</li>
              </ul>
              <input type="radio" id="option2" name="shipmentType" class="btn-check" value="fast">
              <label style="width: 270px;" class="btn btn-primary" for="option2">Select</label>
            </div>
          </div>
        </div>
        <div class="col">
          <div class="card mb-4 shadow-sm">
            <div class="card-header">
              <h4 class="my-0 fw-normal">Standard</h4>
            </div>
            <div class="card-body">
              <h1 class="card-title pricing-card-title">₹500</h1>
              <ul class="list-unstyled mt-3 mb-4">
                <li>by 12:00</li>
                <li>FedEx international</li>
                <li>Economy</li>
              </ul>
              <input type="radio" id="option3" name="shipmentType" class="btn-check" value="standard">
              <label style="width: 270px;" class="btn btn-primary" for="option3">Select</label>
            </div>
          </div>
        </div>
      </div>

      <hr style="height:2px;border-width:0;color:gray;background-color:gray">

      <div class="container d-flex flex-column border px-5">
        <h2 class="mb-2" style="text-align: center;">Package Details</h2>
        <div class="d-flex">
          <label class="mr-2" for="weight" class="form-label"> Package Weight </label>
          <input style="width: 400px;" type="text" class="form-control" id="weight" name="weight" required>
          <span class="ml-2"> KG</span>
        </div>
        <br>
        <label for="dimensions" class="form-label h5"> Dimensions </label>
        <div class="d-flex">
          <label class="mr-2" for="L" class="form-label">Length</label>
          <input class="mx-2" type="text" class="form-control" id="L" name="dimensions[length]" required>
          <label class="mx-2" for="W`" class="form-label">Width</label>
          <input class="mx-2" type="text" class="form-control" id="W" name="dimensions[width]" required>
          <label class="mx-2" for="H" class="form-label">Height</label>
          <input class="mx-2" type="text" class="form-control" id="H" name="dimensions[height]" required>
        </div>
        <br>
        <div class="col-4 d-flex">
          <label for="description" class="form-label">Shipment Purpose</label>
          <select class="form-select" id="state" name="purpose" required>
            <option value="">Select</option>
            <option>Commercial</option>
            <option>Personal Use</option>
          </select>
        </div>
      </div>

      <hr style="height:2px;border-width:0;color:gray;background-color:gray">

      <div class="container">
        <h2 style="text-align: center;">Payment</h2>
        <div class="row gy-3">
          <div class="col-md-6">
            <label for="cc-name" class="form-label">Name on card</label>
            <input type="text" class="form-control" id="cc-name" placeholder="" required>
            <small class="text-muted">Full name as displayed on card</small>
            <div class="invalid-feedback">
              Name on card is required
            </div>
          </div>
          <div class="col-md-6">
            <label for="cc-number" class="form-label">Credit card number</label>
            <input type="text" class="form-control" id="cc-number" placeholder="" required>
            <div class="invalid-feedback">
              Credit card number is required
            </div>
          </div>
          <div class="col-md-3">
            <label for="cc-expiration" class="form-label">Expiration</label>
            <input type="text" class="form-control" id="cc-expiration" placeholder="" required>
            <div class="invalid-feedback">
              Expiration date required
            </div>
          </div>
          <div class="col-md-3">
            <label for="cc-cvv" class="form-label">CVV</label>
            <input type="text" class="form-control" id="cc-cvv" placeholder="" required>
            <div class="invalid-feedback">
              Security code required
            </div>
          </div>
        </div>
      </div>
      <div class="d-flex justify-content-center">
        <button class="btn btn-primary my-3" style="width: 300px;">Place Shipment</button>
      </div>
    </form>
  </div>